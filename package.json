{
  "name": "ci-cd-mono-docker",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate:db": "cd packages/db && bunx prisma generate",
    "start:web":"cd apps/web && bun run start",
    "start:backend":"cd apps/http-server && bun run start",

    "start:ws":"cd apps/ws-server && bun run start",

    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.14",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
